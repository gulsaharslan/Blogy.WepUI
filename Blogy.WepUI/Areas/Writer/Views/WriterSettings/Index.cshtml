@model Blogy.EntityLayer.Concrete.AppUser

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/WriterLayout/Index.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title ml-3">Profili Güncelle</h3>
        <h1>@ViewBag.id</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                <li class="breadcrumb-item active" aria-current="page">Ayarlar</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Profil Güncelleme Paneli</h4>
                    <p class="card-description">
                        Aşağıdaki alanları eksiksiz doldurarak profilinizi günvelleyebilirsiniz.
                    </p>
                    <form method="post" action="/Writer/WriterSettings/UpdateProfile/">
                        <label>Ad</label>
                        <input type="text" asp-for="Name" name="Name" class="form-control" />
                        <br />
                        <label>Soyad</label>
                        <input type="text" asp-for="Surname" name="Surname" class="form-control" />

                        <br />
                        <label>Profil Fotoğraf Yolu</label>
                        <input type="text" asp-for="ImageUrl" name="ImageUrl" class="form-control" />
                        <br />
                        <label>Açıklama</label>
                        <textarea rows="5" class="form-control" asp-for="Description" name="Description"></textarea>
                        <br />
                        
                       <button type="submit" class="btn btn-primary">Profili Güncelle</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

@model Blogy.EntityLayer.Concrete.Message

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/WriterLayout/Index.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title ml-3">Admine Mesaj Gönder</h3>
        <h1>@ViewBag.id</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Destek İşlemleri</a></li>
                <li class="breadcrumb-item active" aria-current="page"> Yeni Mesaj</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Admine Mesaj Gönderme Paneli</h4>
                    <p class="card-description">
                        Aşağıdaki alanları eksiksiz doldurarak admine mesaj  gönderebilirsiniz.
                    </p>
                    <form method="post" action="/Writer/WriterSupport/SendMessage/">
                        <label>Mesaj Başlığı</label>
                        <input type="text" asp-for="Subject" name="Subject" class="form-control" />
                        <br />
                        <label>Mesajınız</label>
                        <textarea rows="5" class="form-control" asp-for="Detail" name="Detail"></textarea>
                        <br />
                        <button class="btn btn-info">Gönder</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

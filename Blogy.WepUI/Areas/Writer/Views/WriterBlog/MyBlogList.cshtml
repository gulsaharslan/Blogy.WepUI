
@model List<Blogy.EntityLayer.Concrete.Article>

@{
    ViewData["Title"] = "MyBlogList";
    Layout = "~/Views/WriterLayout/Index.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Size Ait Bloglar</h3>
        <h1>@ViewBag.id</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Bloglar</a></li>
                <li class="breadcrumb-item active" aria-current="page"> Yazar Blogları</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Blog Listesi</h4>
                    <p class="card-description">
                        Aşağıdaki tablodan size ait blogları görüntüleyebilir ve işlemler yapabilirsiniz.
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Blog Başlığı</th>
                                    <th>Tarih</th>
                                    <th>Kategori</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                    <th>Blog Yorumları</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ArticleId</td>
                                        <td>@item.Title)</td>
                                        <td>@item.CreatedDate.ToShortDateString()</td>
                                        <td>@item.Category.CategoryName</td>
                                        <td><a href="/Writer/WriterBlog/DeleteBlog/@item.ArticleId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Areas/Writer/WriterBlog/UpdateBlog/@item.ArticleId" class="btn btn-warning">Güncelle</a></td>
                                        <td><a href="/Writer/WriterComment/BlogComments/@item.ArticleId" class="btn btn-info">Yorumlar</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                        <a href="/Writer/WriterBlog/CreateBlog/" class="btn btn-primary">Yeni Blog Girişi</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>




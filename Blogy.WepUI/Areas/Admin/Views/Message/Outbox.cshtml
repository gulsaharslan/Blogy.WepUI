@model List<Blogy.EntityLayer.Concrete.Message>


@{
    ViewData["Title"] = "Outbox";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Giden Mesajlar</h3>
        <h1>@ViewBag.id</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                <li class="breadcrumb-item active" aria-current="page"> Giden Mesajlar</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Giden Mesaj Listesi</h4>
                    <p class="card-description">
                        Aşağıdaki tablodan size giden mesajları görüntüleyebilirsiniz.
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Mesaj Başlığı</th>
                                    <th>Mesaj</th>
                                    <th>Gönderilen</th>
                                    <th>Tarih</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.MessageId</td>
                                        <td>@item.Subject</td>
                                        <td>@item.Detail</td>
                                        <td>@item.ReceiverUser.Name&nbsp;@item.ReceiverUser.Surname</td>
                                        <td>@item.Date.ToShortDateString()</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<!doctype html>
<html lang="en">
@await Component.InvokeAsync("_BlogListHeadComponentPartial")
<body>
    @await Component.InvokeAsync("_BlogListNavbarComponentPartial")
    @await Component.InvokeAsync("_BlogDetailByCoverInfoComponentPartial",new {id=ViewBag.i})
    <section class="section">
        <div class="container">
            <div class="row blog-entries element-animate">
                <div class="col-md-12 col-lg-8 main-content">

                    @await Component.InvokeAsync("_BlogDetailByBlogContentComponentPartial", new { id = ViewBag.i })
                    @await Component.InvokeAsync("_BlogDetailCommentComponentPartial", new { id = ViewBag.i })
                </div>
                <!-- END main-content -->
                <div class="col-md-12 col-lg-4 sidebar">
                    <!-- END sidebar-box -->
                    @await Component.InvokeAsync("_BlogDetailByWriterInfoComponentPartial", new { id = ViewBag.i })
                    <!-- END sidebar-box -->
                    @await Component.InvokeAsync("_BlogDetailGetOtherBlogPostByWriterComponentPartial")
                    <!-- END sidebar-box -->
                    @await Component.InvokeAsync("_BlogDetailCategoryListComponentPartial")
                    <!-- END sidebar-box -->
                    @await Component.InvokeAsync("_BlogDetailTagsComponentPartial")
                </div>
                <!-- END sidebar -->
            </div>
        </div>
    </section>
    <!-- Start posts-entry -->
    @await Component.InvokeAsync("_BlogDetailOtherPostsComponentPartial")
    <!-- /.site-footer -->
    @await Component.InvokeAsync("_BlogListFooterComponentPartial")
    <!-- Preloader -->
    <div id="overlayer"></div>
    <div class="loader">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
    <!-- /Scripts -->
    @await Component.InvokeAsync("_BlogListScriptComponentPartial")
</body>
</html>